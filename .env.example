# OpenClip Pro Environment Configuration
# Copy this file to .env and fill in your values

# Firebase Configuration (Required)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.storageBucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Security (Required in production)
VITE_ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# AI Provider API Keys (Optional - can be set in app)
# These are NOT sent to the client and should only be used server-side
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
LMSTUDIO_URL=http://localhost:1234/v1

# Monitoring & Analytics (Optional)
VITE_MONITORING_ENDPOINT=https://your-monitoring-service.com/api/metrics
VITE_ANALYTICS_ENDPOINT=https://your-analytics-service.com/api/events
VITE_ERROR_TRACKING_ENDPOINT=https://your-error-tracking.com/api/errors
VITE_LOGGING_ENDPOINT=https://your-logging-service.com/api/logs

# Rate Limiting (Optional)
VITE_API_RATE_LIMIT_PER_MINUTE=60
VITE_UPLOAD_RATE_LIMIT_PER_HOUR=10
VITE_AUTH_RATE_LIMIT_PER_HOUR=20

# Storage Limits (Optional)
VITE_MAX_FILE_SIZE_MB=5000
VITE_MAX_STORAGE_PER_USER_GB=50

# Feature Flags (Optional)
VITE_ENABLE_AUDIO_ANALYSIS=true
VITE_ENABLE_MULTI_LLM=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_ANALYTICS_DASHBOARD=true

# Development Settings (Optional)
VITE_DEV_MODE=false
VITE_DEBUG_LOGGING=false

# CDN Configuration (Optional)
VITE_CDN_URL=https://your-cdn.com
VITE_FFMPEG_CDN_URL=https://unpkg.com/@ffmpeg/core@0.12.6/dist/umd

# Support & Contact (Optional)
VITE_SUPPORT_EMAIL=support@openclip.pro
VITE_SUPPORT_URL=https://support.openclip.pro

# Legal & Compliance (Optional)
VITE_PRIVACY_POLICY_URL=https://openclip.pro/privacy
VITE_TERMS_OF_SERVICE_URL=https://openclip.pro/terms
VITE_COOKIE_POLICY_URL=https://openclip.pro/cookies